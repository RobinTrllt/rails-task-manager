<div class="container">
  <h1><%= @task.title %></h1>
  <div class="description">
    <h3><%= @task.details %></h3>
  </div>

  <span class="btn"><%= link_to("Edit this task", edit_task_path) %></span>
  <span class="btn"><%= link_to "Delete #{@task.title}",
              task_path(@task),
              method: :delete,
              data: { confirm: "Are you sure?" } %></span>
  <span class="btn" id="back"><%= link_to("Back to list", tasks_path) %></span>
</div>
